{
    "version": 2,
    "builds": [
        {
            "src": "server/src/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/auth/providers/.*",
            "dest": "client/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "server/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}